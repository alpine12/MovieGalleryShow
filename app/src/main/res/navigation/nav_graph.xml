<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/menu_movie_fragment">

    <fragment
        android:id="@+id/menu_movie_fragment"
        android:name="com.alpine12.moviegalleryshow.ui.movie.MovieShowFragment"
        android:label="fragment_movie_show"
        tools:layout="@layout/fragment_movie_show" >
        <action
            android:id="@+id/action_menu_movie_fragment_to_detailMovieFragment"
            app:destination="@id/detailMovieFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/detailMovieFragment" />
    </fragment>
    <fragment
        android:id="@+id/menu_tv_fragment"
        android:name="com.alpine12.moviegalleryshow.ui.tvshow.TvShowFragment"
        android:label="fragment_tv_show"
        tools:layout="@layout/fragment_tv_show" />
    <fragment
        android:id="@+id/detailMovieFragment"
        android:name="com.alpine12.moviegalleryshow.ui.movie.DetailMovieFragment"
        android:label="fragment_detail_movie"
        tools:layout="@layout/fragment_detail_movie" >
        <argument
            android:name="idMovie"
            app:argType="integer" />
    </fragment>
</navigation>